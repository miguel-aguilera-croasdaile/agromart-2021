<div class="container">
  <div class="row">
    <div style="border-right: 1px solid red" class="listing-flat col-sm-12 col-md-7 col-lg-7 col-xl-7">
      <p><%= @listing.name %> </p>
      <p><%= @listing.quantity %> <%= @listing.quantity_unit %></p>
      <p><%= @listing.currency%> <%= @listing.price.to_i %> </p>
      <p><%= @listing.address %> </p>
    </div>
    <div class="listing-flat col-xs-12 col-sm-6 col-md-5 col-lg-5 col-xl-5">
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'listing_id', @listing.id %>
        <%= submit_tag 'Buy', class: 'primary-button wide' %>
      <% end %>
      <hr>
      <div class="container">

        <div class="row">
          <div class="d-flex align-items-center col-2">
            <div>
              <div class="avatar"></div>
            </div>
          </div>
          <div class=" col-8 align-items-center">
            <p style="margin: 0"><%= @listing.user.email %> </p>
            <p style="margin: 0"><%= @listing.user.listings.count %> listings for sale </p>
          </div>
          <div class="d-flex  col-2 align-items-center justify-content-end">
            <% rand(0..3).times do %>
              <div class="certificates" style="padding: 2px">
                <i class="fas fa-certificate"></i>
              </div>
            <% end %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="stars d-flex  col-6 justify-content-start">
            <% q = rand(1..5) %>
            <% q.times do %>
              <i class="fas fa-star"></i>
            <% end %>
            <% (5-q).times do %>
              <i class="far fa-star"></i>
            <% end %>
          </div>
          <div class="d-flex col-6 justify-content-end">
            <%= rand(5..10) %> reviews
          </div>
        </div>
      </div>
      <hr>
    </div>
  </div>
</div>
